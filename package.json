{
  "name": "style-transform",
  "version": "0.1.9",
  "description": "A toolkit for fast and flexible manipulation of css-in-js styles",
  "author": "Jon Whitehead",
  "license": "MIT",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "prettier": "prettier --single-quote --trailing-comma all --write \"{src,test}/**/*.ts\"",
    "clean": "rimraf lib/*",
    "build": "yarn run clean && tsc",
    "test": "jest",
    "prepare": "yarn run test && yarn run build"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|js)$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  },
  "devDependencies": {
    "@types/jest": "^22.0.1",
    "jest": "^22.0.4",
    "prettier": "^1.9.2",
    "rimraf": "^2.6.2",
    "ts-jest": "^22.0.1",
    "typescript": "^2.6.2"
  },
  "dependencies": {
    "css-shorthand-expand": "^1.1.0",
    "object-path-immutable": "^0.5.2"
  }
}
